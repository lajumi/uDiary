<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_color">

    <RelativeLayout
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnAdd1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color1"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/btnAdd2"
            android:layout_toEndOf="@+id/btnAdd1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color2"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/btnAdd3"
            android:layout_toEndOf="@+id/btnAdd2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color3"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/btnAdd4"
            android:layout_toEndOf="@+id/btnAdd3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color4"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/btnAdd5"
            android:layout_toEndOf="@+id/btnAdd4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color5"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/btnAdd6"
            android:layout_toEndOf="@+id/btnAdd5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color6"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/btnAddDefault"
            android:layout_toEndOf="@+id/btnAdd6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_default"
            android:layout_margin="2dp"/>
    </RelativeLayout>
    <EditText
        android:layout_below="@+id/buttonPanel"
        android:id="@+id/inputAddEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_default"
        android:inputType="text" />

</RelativeLayout>